{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Schema for the OT-2 Workcell's JSON-based workflow specification",
    "type": "object",
    "properties": {
        "workflow_name": {
            "type": "string"
        },
        "hardware": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "hardware/OT2.json"
                    },
                    {
                        "$ref": "hardware/arm.json"
                    }
                ]
            },
            "additionalItems": false,
            "minItems": 1
        },
        "steps": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "steps/ot2_protocol.json"
                    },
                    {
                        "$ref": "steps/plate_transfer.json"
                    },
                    {
                        "$ref": "steps/ot2_command.json"
                    },
                    {
                        "$ref": "steps/step_batch.json"
                    }
                ]
            },
            "additionalItems": false,
            "minItems": 1
        },
        "metadata": {
            "$ref": "metadata.json"
        }
    },
    "required": [
        "workflow_name",
        "hardware",
        "steps"
    ],
    "additionalProperties": false
}